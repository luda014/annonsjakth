                    android:id="@+id/i1t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Item 1"
                    app:layout_constraintStart_toEndOf="@+id/img_item1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/i1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Description"
                    app:layout_constraintStart_toEndOf="@+id/img_item1"
